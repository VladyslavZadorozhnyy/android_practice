<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        tools:context=".notification.ui.NotificationFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:text="Choose variant with notification:" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/immediate_notif"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Send immediate notification"
                android:layout_marginTop="60dp"
                app:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delay_notif"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Send notification with delay"
                android:layout_marginTop="10dp"
                app:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/progress_notif"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Send notification with progress"
                android:layout_marginTop="10dp"
                app:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

        </LinearLayout>
    </FrameLayout>
</layout>