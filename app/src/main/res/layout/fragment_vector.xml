<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        tools:context=".vector_views.ui.VectorFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="40dp"
                android:layout_marginHorizontal="20dp"
                android:text="Vector view fragment"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="30sp" />

            <com.example.androidpractice.vector_views.businesslogic.PathView
                android:id="@+id/non_xml_view"
                android:background="#FFFF00"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginHorizontal="20dp"
                android:text="Hello, VectorFragment" />

            <ImageView
                android:id="@+id/xml_view"
                android:background="#00FF00"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:src="@drawable/path_view_xml"
                android:layout_marginHorizontal="20dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/non_xml_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:text="Non-xml view on/off"
                android:textSize="20sp"
                android:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/xml_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="10dp"
                android:text="Xml view on/off"
                android:textSize="20sp"
                android:backgroundTint="@color/black"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

        </LinearLayout>

    </FrameLayout>
</layout>