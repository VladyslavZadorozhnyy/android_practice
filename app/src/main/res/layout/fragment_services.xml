<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".services.ui.ServicesFragment"
        android:background="@color/white"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="40dp"
                android:layout_marginHorizontal="20dp"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="Explore services" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/foreground_service_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="Foreground service"
                android:textSize="20sp"
                app:backgroundTint="@color/black"
                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/background_service_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="Background service"
                android:textSize="20sp"
                app:backgroundTint="@color/black"
                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/on_bind_service_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="Onbind service"
                android:textSize="20sp"
                app:backgroundTint="@color/black"
                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/on_start_service_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="Onstart service"
                android:textSize="20sp"
                app:backgroundTint="@color/black"
                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/remote_service_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="Remote service"
                android:textSize="20sp"
                app:backgroundTint="@color/black"
                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/local_service_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:text="Local service"
                android:textSize="20sp"
                app:backgroundTint="@color/black"
                android:textColor="@color/white"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"/>

        </LinearLayout>
    </FrameLayout>
</layout>